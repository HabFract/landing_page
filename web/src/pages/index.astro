---
import BaseLayout from '../components/layouts/BaseLayout.astro';
import Navigation from '../components/sections/Navigation.astro';
import Hero from '../components/sections/Hero.astro';
import Testimonial from '../components/sections/Testimonial.astro';
import Features from '../components/sections/Features.astro';
import Pricing from '../components/sections/Pricing.astro';
import FAQ from '../components/sections/FAQ.astro';
import Contact from '../components/sections/Contact.astro';
import landingData from '../content/landing.json';
---

<BaseLayout title="Hyperline | The new standard for revenue management">
  <Navigation />
  <Hero {...landingData.hero} />
  <Testimonial {...landingData.testimonial} />
  <Features
    headline={landingData.features.headline}
    items={landingData.features.items}
    integrations={landingData.integrations}
    products={landingData.products}
  />
  <Pricing tiers={landingData.pricing.tiers} />
  <FAQ items={landingData.faq} />
  <Contact {...landingData.contact} />
</BaseLayout>
